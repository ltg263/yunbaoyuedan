<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_bottom_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>

        <item name="android:textColor">@color/global</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="normal_button_style">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_btn_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="default_bottom_button_large_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:enabled">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:background">@drawable/bg_btn_primary</item>
    </style>

    <style name="default_bottom_button_small_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_btn_primary</item>
    </style>
</resources>