<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <!--底部信息栏-->
        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="20dp"
            >
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:src="@mipmap/ic_launcher_sys_msg"
                app:riv_corner_radius="7.5dp"
                android:id="@+id/img_avatar"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:maxWidth="200dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/img_avatar"
                app:layout_constraintLeft_toRightOf="@+id/img_avatar"
                app:layout_constraintTop_toTopOf="@+id/img_avatar"
                app:layout_constraintBottom_toTopOf="@+id/ll_sex_group"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textStyle="bold"
                android:id="@+id/tv_name"
                />

            <CheckedTextView
                android:id="@+id/btn_follow"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_name"
                android:background="@drawable/bg_user_follow"
                android:button="@null"
                android:gravity="center"
                android:minWidth="50dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:text="@string/user_follow_0"
                android:textAlignment="center"
                android:textColor="@color/fg_btn_follow"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_name"
                app:layout_constraintLeft_toRightOf="@+id/tv_name"
                app:layout_constraintTop_toTopOf="@+id/tv_name" />

            <include
                android:id="@+id/ll_sex_group"
                layout="@layout/item_sex"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginTop="6dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_avator"
                app:layout_constraintLeft_toLeftOf="@+id/tv_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />


            <ImageView
                android:id="@+id/iv_anchor_level"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:adjustViewBounds="true"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@id/ll_sex_group"
                app:layout_constraintBottom_toBottomOf="@id/ll_sex_group"
                />

            <ImageView
                android:id="@+id/iv_level"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:adjustViewBounds="true"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toRightOf="@id/iv_anchor_level"
                app:layout_constraintBottom_toBottomOf="@id/ll_sex_group"
                />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_color_f32_radius_6"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:textSize="9dp"
                app:layout_constraintLeft_toRightOf="@+id/iv_level"
                app:layout_constraintBottom_toBottomOf="@id/ll_sex_group"

                tools:text="泰安" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="@+id/img_avator"
                app:layout_constraintTop_toBottomOf="@+id/ll_sex_group"
                tools:text="激动的心，颤抖的手，五练绝世有木有！哈哈哈哈哈哈哈哈哈" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/img_avator"
                android:background="@drawable/bg_color_f32_radius_6"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2.5dp"
                android:paddingBottom="2.5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/ll_skill"
                >
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    tools:src="@mipmap/ic_launcher_sys_msg"
                    android:id="@+id/img_skill"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="王者荣耀 12币/局"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:id="@+id/tv_skill_message"
                    />
            </LinearLayout>

            <com.yunbao.common.custom.DrawableTextView
                android:id="@+id/tv_detail_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:dt_left_drawable="@mipmap/icon_blue_location"
                app:dt_left_height="12dp"
                app:dt_left_width="12dp"
                tools:text="嘉华酒店"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:maxWidth="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:layout_goneMarginLeft="0dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:layout_constraintLeft_toRightOf="@+id/ll_skill"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/bg_color_f32_radius_6"
                />
        </android.support.constraint.ConstraintLayout>

        <!--右边工具栏-->
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"
            >
            <ImageView
                android:id="@+id/btn_like"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                tools:src="@mipmap/zan_video0"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/like_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_like"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:text="2"
                android:translationY="-5dp"
                />
            <ImageView
                android:id="@+id/btn_comment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/btn_like"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:src="@mipmap/icon_dynamic_comment2"
                />
            <TextView
                android:id="@+id/comment_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_comment"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:text="2"
                android:translationY="-5dp"
                />
            <ImageView
                android:id="@+id/btn_skill"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/btn_comment"
                android:layout_marginTop="18dp"
                android:padding="7dp"
                tools:src="@mipmap/ic_launcher_sys_msg"
                />
            <TextView
                android:id="@+id/share_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_skill"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:translationY="-5dp"
                />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>