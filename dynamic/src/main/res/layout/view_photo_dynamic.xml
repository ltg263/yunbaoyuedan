<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:fadingEdge="none"
            app:elevation="0dp"
            app:layout_behavior="com.yunbao.common.custom.AppBarLayoutBehavior"
            >
            <com.yunbao.common.custom.MyFrameLayout2
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fl_appbar_container"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/bg_user_shadow"
                    android:layout_gravity="bottom"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:background="@drawable/bg_al_66_black_radius_15"
                    android:text="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="10dp"
                    android:id="@+id/tv_photo_num"
                    />
            </com.yunbao.common.custom.MyFrameLayout2>
        </android.support.design.widget.AppBarLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:orientation="vertical"
                android:id="@+id/vp_container"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >
                <include layout="@layout/item_user_detail_page"/>
                <include layout="@layout/item_skill_detail_page" />

               </LinearLayout>>
    </android.support.design.widget.CoordinatorLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_bottom_height"
        android:layout_gravity="bottom"
        android:id="@+id/vp_tools"
        android:background="@color/transparent"
        ></FrameLayout>
</FrameLayout>