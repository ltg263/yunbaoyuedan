<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:background="@drawable/bg_white_radius_17"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/comment_num"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            tools:text="@string/comment"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/textColor2"
            android:textSize="13sp"
            />
        <View style="@style/line3"/>
        <com.yunbao.common.custom.refresh.RxRefreshView
            android:id="@+id/refreshView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/comment_bottom_height"
            android:layout_marginBottom="@dimen/default_margin"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/comment_bottom_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/vp_tools"
                android:background="@color/white"
                android:layout_marginBottom="10dp"
                >
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_color_gray9_radius_17"
                    android:layout_height="35dp">
                    <TextView
                        android:id="@+id/input"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true"
                        android:layout_marginRight="50dp"
                        android:text="@string/video_say_something"
                        android:textColor="@color/gray1"
                        android:textSize="14sp"
                        />
                    <ImageView
                        android:id="@+id/btn_face"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:button="@null"
                        android:layout_gravity="right"
                        android:paddingRight="10dp"
                        android:src="@mipmap/icon_chat_face"
                        android:tint="@color/gray1"
                        />
                </FrameLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/btn_zan"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/zan_0"
                        android:id="@+id/img_zan"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:id="@+id/tv_zan"
                        android:textColor="@color/gray1"
                        tools:text="0"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
            </LinearLayout>


        </FrameLayout>

    </LinearLayout>
</FrameLayout>