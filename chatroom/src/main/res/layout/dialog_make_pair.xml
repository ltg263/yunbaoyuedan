<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/container"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:src="@mipmap/icon_beckoning"
        android:layout_gravity="center_horizontal"
        android:id="@+id/img_beckoning_tip"
        android:alpha="0"
        />

    <FrameLayout
        android:layout_width="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:id="@+id/group_man"
            android:translationX="-300dp"
            >
            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="bottom"
                android:id="@+id/img_bg_man"
                android:src="@mipmap/bg_beckoning_left" />
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:riv_oval="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:rotation="-15"

                android:id="@+id/img_avator_man"
                tools:src="@mipmap/icon_msg_sys_main"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:id="@+id/group_woman"
            android:translationX="300dp"
            >
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@mipmap/bg_beckoning_right"
                android:layout_gravity="bottom"
                android:id="@+id/img_bg_woman"
                />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_avator_woman"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:rotation="15"
                app:riv_oval="true"
                tools:src="@mipmap/icon_msg_sys_main" />
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:translationY="-35dp"
        android:id="@+id/group_bottom"
        android:alpha="0"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="270dp"
            android:layout_height="49dp"
            android:src="@mipmap/bg_show_nick"
            />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="46dp"
            android:autoSizeTextType="uniform"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="11dp"
            android:textStyle="bold"
            android:id="@+id/tv_man_name"
            tools:text="他是个男的" />


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="46dp"
            android:layout_marginTop="10dp"
            android:autoSizeTextType="uniform"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="11dp"
            android:textStyle="bold"
            android:gravity="right"
            android:id="@+id/tv_woman_name"
            tools:text="她是个女的" />

    </FrameLayout>


</LinearLayout>