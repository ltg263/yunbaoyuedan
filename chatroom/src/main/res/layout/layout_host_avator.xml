<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="90dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:layout_height="90dp"
    >
<ImageView
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:id="@+id/img_avator_bg"
    />
<com.makeramen.roundedimageview.RoundedImageView
    android:layout_width="69dp"
    android:layout_height="69dp"
    app:riv_oval="true"
    android:padding="1.3dp"
    android:layout_gravity="center"
    android:scaleType="centerCrop"
    android:id="@+id/img_host_avator"
    android:background="@drawable/bound_aval_white"
    tools:src="@mipmap/ic_launcher_sys_msg"
    />

<com.yunbao.common.custom.DrawableTextView
    android:layout_width="wrap_content"
    android:background="@drawable/bg_color_fc55f0_white_bound"
    android:textColor="@color/white"
    android:id="@+id/tv_status_host"
    android:layout_marginTop="55dp"
    app:dt_left_drawable="@mipmap/icon_micro_phone"
    app:dt_left_width="10dp"
    app:dt_left_height="10dp"
    android:paddingLeft="3dp"
    android:paddingRight="5dp"
    android:text="@string/host"
    android:textSize="11dp"
    android:gravity="center"
    android:layout_marginBottom="5dp"
    android:drawablePadding="2dp"
    android:layout_gravity="center_horizontal|bottom"
    android:layout_height="18dp" />
</FrameLayout>