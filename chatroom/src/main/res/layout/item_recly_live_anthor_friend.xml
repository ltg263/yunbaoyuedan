<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/black1"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="53dp"
        android:layout_height="53dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bg_imageView"
            />
        <FrameLayout
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:id="@+id/vp_avator_bg"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_live_mike"
                />
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="41dp"
                android:layout_height="41dp"
                app:riv_oval="true"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:id="@+id/img_avatar"
                />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/img_heart"
                    tools:src="@mipmap/icon_beckoning_3"
                    android:layout_gravity="center"

                    />

        </FrameLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/vp_name"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp"
        android:paddingRight="5dp"
        tools:background="@drawable/bg_btn_primary"
        >
        
        <TextView
            android:layout_width="12dp"
            android:layout_height="12dp"
            tools:text="1"
            android:gravity="center"
            android:textSize="8dp"
            android:layout_marginLeft="3dp"
            android:textColor="@color/white"
            tools:background="@drawable/round_green"
            android:layout_marginRight="3dp"
            android:id="@+id/tv_num"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="楚霸王"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:id="@+id/tv_name"
            android:singleLine="true"
            android:ellipsize="middle"
            android:gravity="center_vertical"
            />
    </LinearLayout>

</LinearLayout>