<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:maxHeight="75dp"
    android:orientation="vertical"
    tools:background="@color/black1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@mipmap/live_room_shader">

        <TextView
            android:id="@+id/tv_speak_time"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/white"
            android:textSize="12dp"
            tools:background="@drawable/bg_color_black_alpha_99_radius_13" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_chat"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginRight="5dp"
            android:padding="3dp"
            android:paddingLeft="@dimen/default_padding"
            android:src="@mipmap/icon_live_chat" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/default_padding"
            android:textColor="#959595"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/btn_mike_1"
            android:layout_width="43dp"
            android:layout_height="39dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textColor="@color/fg_mike_btn"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/btn_mike_2"
            android:layout_width="43dp"
            android:layout_height="39dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            >

            <ImageView
                android:id="@+id/btn_msg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@mipmap/icon_live_msg" />

            <TextView
                android:id="@+id/red_point"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_alignTop="@id/btn_msg"
                android:layout_alignRight="@id/btn_msg"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_red_point"
                android:gravity="center"
                android:includeFontPadding="false"
                android:minWidth="14dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="1"
                android:textColor="#fff"
                android:textSize="10sp"
                android:translationY="-4dp"
                android:visibility="invisible" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:src="@mipmap/icon_btn_share" />

        <ImageView
            android:id="@+id/btn_gift"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:padding="3dp"
            android:src="@mipmap/icon_gift" />
    </LinearLayout>

</LinearLayout>