<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titleView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/vip"
                    android:layout_width="24dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/o_vip_icon"
                    android:visibility="gone" />
            </LinearLayout>


            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:padding="9dp"
                android:src="@mipmap/icon_back"
                android:tint="@color/textColor" />

            <ImageView
                android:id="@+id/btn_option_more"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:padding="8dp"
                android:src="@mipmap/icon_chat_option_more"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/btn_user"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="11dp"
                android:src="@mipmap/btn_to_user" />

        </RelativeLayout>

        <View style="@style/line2" />


        <LinearLayout
            android:id="@+id/order_group"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="25dp">

                <ImageView
                    android:id="@+id/skill_thumb"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/skill_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btn_order_done"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:background="@drawable/bg_btn_done"
                    android:gravity="center"
                    android:minWidth="70dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/order_done"
                    android:textColor="@color/global"
                    android:textSize="12sp"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="@color/global" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bg_order_point_2" />

                <View
                    android:id="@+id/line_1"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="2"
                    android:background="#DCDCDC" />

                <View
                    android:id="@+id/point_1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bg_order_point_0" />

                <View
                    android:id="@+id/line_2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="2"
                    android:background="#DCDCDC" />

                <View
                    android:id="@+id/point_2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bg_order_point_0" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="#DCDCDC" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/order_status_wait"
                    android:textColor="@color/gray1"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/order_status_working"
                    android:textColor="@color/gray1"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/order_status_done"
                    android:textColor="@color/gray1"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_follow_group"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/btn_close_follow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:padding="7dp"
                android:src="@mipmap/icon_chat_follow_close"
                android:tint="@color/gray1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/im_follow_tip"
                android:textColor="@color/gray1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btn_follow"
                android:layout_width="44dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_btn_follow"
                android:button="@null"
                android:gravity="center"
                android:text="@string/follow"
                android:textColor="@color/global"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray2"
            android:overScrollMode="never" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.yunbao.common.custom.DrawableCheckBox
                android:id="@+id/btn_voice_record"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:button="@null"
                android:checked="false"
                android:drawableTint="@color/gray1"
                android:paddingLeft="10dp"
                app:dt_left_drawable="@drawable/bg_chat_btn_voice"
                app:dt_left_height="26dp"
                app:dt_left_width="26dp" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_chat_room_input"
                    android:gravity="center_vertical"
                    android:hint="@string/im_send_msg"
                    android:imeActionLabel="@string/send"
                    android:imeOptions="actionSend"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:singleLine="true"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/gray1"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/btn_voice_record_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_chat_voice_record_0"
                    android:gravity="center"
                    android:text="@string/im_press_say"
                    android:textColor="@color/gray1"
                    android:textSize="15sp"
                    android:visibility="invisible" />

            </FrameLayout>


            <com.yunbao.common.custom.DrawableCheckBox
                android:id="@+id/btn_face"
                android:layout_width="36dp"
                android:layout_height="46dp"
                android:button="@null"
                android:checked="false"
                android:drawableTint="@color/gray1"
                app:dt_right_drawable="@drawable/bg_chat_btn_face"
                app:dt_right_height="26dp"
                app:dt_right_width="26dp" />

            <ImageView
                android:id="@+id/btn_add"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@mipmap/icon_chat_add"
                android:tint="@color/gray1" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/more_container"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/face_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/group_voice_record_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_chat_room_voice_tips"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="invisible">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/icon_video_voice" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/video_comment_voice_tip"
            android:textColor="@color/gray1"
            android:textSize="12sp" />
    </LinearLayout>

</FrameLayout>