<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_order_msg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/btn_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@mipmap/icon_msg_order"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/red_point_order"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_gravity="right"
                    android:background="@drawable/bg_red_point"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:minWidth="14dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textColor="#fff"
                    android:visibility="invisible" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/im_order"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_below="@+id/img1"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/btn_snatch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <FrameLayout
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/icon_grab_sheet"
                android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/red_point_snatch"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_gravity="right"
                    android:background="@drawable/bg_red_point"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:minWidth="14dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textColor="#fff"
                    android:visibility="invisible" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/snatch_hall"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img2"/>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/btn_didi_order"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_centerHorizontal="true">


            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/icon_didi_order"
                android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/red_point_didi"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_gravity="right"
                    android:background="@drawable/bg_red_point"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:minWidth="14dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textColor="#fff"
                    android:visibility="invisible" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/didi_order"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img3"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_system_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/icon_msg_sys_main" />

                <TextView
                    android:id="@+id/red_point_main"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_gravity="right"
                    android:background="@drawable/bg_red_point"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:minWidth="14dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textColor="#fff"
                    android:visibility="invisible" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/im_system_main"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img4"/>

        </RelativeLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"/>

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"/>
        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray4"/>

    <RelativeLayout
        android:id="@+id/btn_system_msg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/avatar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@mipmap/icon_msg_sys" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/im_system_msg"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/msg_sys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/gray1"
                android:textSize="13sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/gray1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/red_point"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_below="@+id/time"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/bg_red_point"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="14dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/white"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray4"/>

</LinearLayout>