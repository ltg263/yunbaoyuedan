<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:paddingTop="19dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:onClick="backClick"
                android:padding="9dp"
                android:src="@mipmap/icon_back"
                android:tint="@color/gray1"
                />

            <TextView
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:text="@string/save"
                android:textColor="@color/global"
                android:textSize="16sp"
                />

        </RelativeLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <FrameLayout
                    android:id="@+id/btn_price"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/price"
                        android:textColor="@color/gray1"
                        android:textSize="13sp"
                        />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/icon_arrow_right"
                        android:tint="#BEBEBE"
                        />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="35dp"
                        android:textColor="@color/red"
                        android:textSize="13sp"
                        />


                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/gray6"
                    />

                <FrameLayout
                    android:id="@+id/btn_skill_label"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/game_skill_label"
                        android:textColor="@color/gray1"
                        android:textSize="13sp"
                        />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/icon_arrow_right"
                        android:tint="#BEBEBE"
                        />

                    <TextView
                        android:id="@+id/choose_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="35dp"
                        android:text="@string/game_edit_choose"
                        android:textColor="@color/gray3"
                        android:textSize="13sp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="35dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/skill_label_0"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:background="@drawable/bg_game_edit_label"
                            android:gravity="center"
                            android:minWidth="60dp"
                            android:textColor="@color/global"
                            android:textSize="12sp"
                            android:visibility="invisible"
                            />

                        <TextView
                            android:id="@+id/skill_label_1"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/bg_game_edit_label"
                            android:gravity="center"
                            android:minWidth="60dp"
                            android:textColor="@color/global"
                            android:textSize="12sp"
                            android:visibility="invisible"
                            />

                        <TextView
                            android:id="@+id/skill_label_2"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/bg_game_edit_label"
                            android:gravity="center"
                            android:minWidth="60dp"
                            android:textColor="@color/global"
                            android:textSize="12sp"
                            android:visibility="invisible"
                            />

                    </LinearLayout>


                </FrameLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/game_ability"
                android:textColor="@color/textColor"
                android:textSize="13sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <FrameLayout
                    android:id="@+id/btn_level"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="15dp"
                    >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/game_level"
                        android:textColor="@color/gray1"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/textColor"
                        android:textSize="13sp"
                        />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/gray6"
                    />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/game_graph"
                        android:textColor="@color/gray1"
                        android:textSize="13sp"
                        />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/thumb"
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="80dp"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="5dp"
                        />

                    <TextView
                        android:id="@+id/btn_choose_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:padding="15dp"
                        android:text="@string/edit"
                        android:textColor="@color/global"
                        android:textSize="13sp"
                        />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_home_info"
                    android:textColor="@color/textColor"
                    android:textSize="13sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="@string/game_edit_tip"
                    android:textColor="@color/gray1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <FrameLayout
                    android:id="@+id/btn_voice"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:text="@string/game_voice"
                        android:textColor="@color/gray1"
                        />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/icon_arrow_right"
                        android:tint="#BEBEBE"
                        />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/gray6"
                    />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:text="@string/skill_introduce"
                        android:textColor="@color/gray1"
                        />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    >

                    <EditText
                        android:id="@+id/des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_game_edit_intro"
                        android:gravity="top"
                        android:hint="@string/input_skill_introduce_plz"
                        android:maxLength="30"
                        android:paddingBottom="70dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/gray1"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:text="0/30"
                        android:textColor="@color/gray1"
                        />


                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>