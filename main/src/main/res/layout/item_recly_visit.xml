<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/img_avator"
        android:layout_marginLeft="10dp"
        tools:src="@mipmap/avatar_test"
        app:riv_corner_radius="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="知画"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/img_avator"
        app:layout_constraintBottom_toTopOf="@+id/tv_visit_tip"
        app:layout_constraintLeft_toRightOf="@+id/img_avator"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:id="@+id/tv_name"
        />
    <LinearLayout
        android:id="@+id/ll_sex_group"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:gravity="center_vertical"
        android:minWidth="30dp"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        android:layout_marginLeft="3dp"
        >
        <ImageView
            android:id="@+id/sex"
            android:layout_width="9dp"
            android:layout_height="9dp"
            tools:src="@mipmap/icon_sex_female"
            />
        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="9sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/visit_your_page"
        android:textColor="@color/gray5"
        android:textSize="11sp"
        android:id="@+id/tv_visit_tip"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintBottom_toBottomOf="@+id/img_avator"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="10分钟前"
        android:textColor="@color/gray5"
        android:textSize="11sp"
        android:id="@+id/tv_time"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/avatar"
        app:layout_constraintRight_toRightOf="@id/tv_time"
        android:background="@color/gray6"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="17dp"

        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:gravity="center"
        android:id="@+id/tv_visit_num"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/global"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@id/tv_visit_tip"
        android:background="@drawable/bg_bound_gloal_radius_3"
        android:textSize="9sp"
        />



</android.support.constraint.ConstraintLayout>