<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textColor="@color/black"
    android:textSize="20sp"
    android:textStyle="bold"
    android:text="@string/pwd_input_1"
    android:layout_marginTop="40dp"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">

        <com.yunbao.common.custom.SplitEditText
            android:id="@+id/edit"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:textColor="@color/textColor"
            app:borderColor="#E6E6E6"
            app:contentNumber="4"
            app:contentShowMode="password"
            app:corner_size="5dp"
            app:inputBoxSquare="true"
            app:inputBoxStyle="singleBox"
            app:spaceSize="10dp"
            />

        <View
            android:id="@+id/wrap"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignLeft="@id/edit"
            android:layout_alignTop="@id/edit"
            android:layout_alignRight="@id/edit"
            android:layout_alignBottom="@id/edit" />

    </RelativeLayout>

</LinearLayout>