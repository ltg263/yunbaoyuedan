<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingTop="19dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/edit_profile"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:onClick="backClick"
                android:padding="9dp"
                android:src="@mipmap/icon_back"
                android:tint="@color/gray1"
                />

        </RelativeLayout>
    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/avatar"
                android:textColor="@color/gray1"
                android:textSize="13sp"
                />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avatar"
                android:layout_width="168dp"
                android:layout_height="168dp"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="10dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray2"
                />

            <FrameLayout
                android:id="@+id/btn_voice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/voice"
                    android:textColor="@color/gray1"
                    android:textSize="13sp"
                    />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@mipmap/icon_arrow_right"
                    android:tint="#BEBEBE"
                    />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray2"
                />

            <FrameLayout
                android:id="@+id/btn_nickname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/nickname"
                    android:textColor="@color/gray1"
                    android:textSize="13sp"
                    />


                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="30dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/set_profile_nickname"
                    android:singleLine="true"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/gray1"
                    android:textSize="13sp"
                    />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@mipmap/icon_arrow_right"
                    android:tint="#BEBEBE"
                    />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/gray6"
                />

            <FrameLayout
                android:id="@+id/btn_age"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxWidth="85dp"
                    android:singleLine="true"
                    android:text="@string/edit_profile_age"
                    android:textColor="@color/gray1"
                    android:textSize="13sp"
                    />


                <TextView
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="30dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/edit_profile_age_1"
                    android:singleLine="true"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/gray1"
                    android:textSize="13sp"
                    />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@mipmap/icon_arrow_right"
                    android:tint="#BEBEBE"
                    />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/gray6"
                />

            <FrameLayout
                android:id="@+id/btn_city"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/edit_profile_city"
                    android:textColor="@color/gray1"
                    android:textSize="13sp"
                    />


                <TextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="30dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/edit_profile_city_1"
                    android:singleLine="true"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/gray1"
                    android:textSize="13sp"
                    />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@mipmap/icon_arrow_right"
                    android:tint="#BEBEBE"
                    />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/gray6"
                />

            <FrameLayout
                android:id="@+id/btn_sign"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/edit_profile_sign"
                    android:textColor="@color/gray1"
                    android:textSize="13sp"
                    />


                <TextView
                    android:id="@+id/sign"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="30dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/edit_profile_sign_1"
                    android:singleLine="true"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/gray1"
                    android:textSize="13sp"
                    />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@mipmap/icon_arrow_right"
                    android:tint="#BEBEBE"
                    />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/gray6"
                />

            <FrameLayout
                android:id="@+id/btn_interest"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/edit_profile_interest"
                    android:textColor="@color/gray1"
                    android:textSize="13sp"
                    />


                <TextView
                    android:id="@+id/interest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="30dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/edit_profile_interest_1"
                    android:singleLine="true"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/gray1"
                    android:textSize="13sp"
                    />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@mipmap/icon_arrow_right"
                    android:tint="#BEBEBE"
                    />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/gray6"
                />

            <FrameLayout
                android:id="@+id/btn_job"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/edit_profile_job"
                    android:textColor="@color/gray1"
                    android:textSize="13sp"
                    />


                <TextView
                    android:id="@+id/job"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="30dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/edit_profile_job_1"
                    android:singleLine="true"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/gray1"
                    android:textSize="13sp"
                    />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@mipmap/icon_arrow_right"
                    android:tint="#BEBEBE"
                    />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/gray6"
                />

            <FrameLayout
                android:id="@+id/btn_school"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/edit_profile_school"
                    android:textColor="@color/gray1"
                    android:textSize="13sp"
                    />


                <TextView
                    android:id="@+id/school"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="30dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/edit_profile_school_1"
                    android:singleLine="true"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/gray1"
                    android:textSize="13sp"
                    />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@mipmap/icon_arrow_right"
                    android:tint="#BEBEBE"
                    />

            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>