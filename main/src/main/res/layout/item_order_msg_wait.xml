<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/gray1"
        android:textSize="12sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_dialog_2"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/skill_thumb"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/skill_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_profit"
                    android:textColor="@color/gray1"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/red"
                    android:textSize="13sp"
                    />
            </LinearLayout>
        </FrameLayout>


        <TextView
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/textColor"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/service_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/textColor"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="@color/gray1"
            android:textSize="13sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/btn_refuse"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:background="@drawable/bg_btn_ghost_2"
                android:gravity="center"
                android:minWidth="90dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/refuse"
                android:textColor="@color/global"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/btn_order"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_primary_2"
                android:gravity="center"
                android:text="@string/get_order"
                android:textColor="@color/white"
                android:textSize="14sp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>