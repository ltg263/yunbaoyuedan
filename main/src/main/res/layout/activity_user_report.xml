<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/select_report_reson"
                android:textColor="@color/gray1"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/reclyView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:nestedScrollingEnabled="false"
                />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/report_dynamic_tip"
                android:textColor="@color/gray1"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/tv_des"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_color_white_radius_10"
                android:gravity="left"
                android:padding="5dp"
                android:textSize="13sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/report_dynamic_tip_img"
                android:textColor="@color/gray1"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_btn_img_1"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_xuxiankuang"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_btn_add_img"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />


                <ImageView
                    android:id="@+id/iv_btn_img_2"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_xuxiankuang"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_btn_add_img"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />

                <ImageView
                    android:id="@+id/iv_btn_img_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="90dp"
                    android:src="@mipmap/ic_btn_add_img"
                    android:scaleType="centerInside"
                    android:background="@drawable/btn_xuxiankuang"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_btn_primary_2"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>