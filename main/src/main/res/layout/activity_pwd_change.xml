<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/black1"
    android:textSize="14sp"
    android:text="@string/pwd_1"
    android:layout_marginTop="30dp"
    android:layout_marginStart="20dp"/>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp">

        <com.yunbao.common.custom.SplitEditText
            android:id="@+id/edit1"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:textColor="@color/textColor"
            app:borderColor="#E6E6E6"
            app:contentNumber="4"
            app:contentShowMode="password"
            app:corner_size="5dp"
            app:inputBoxSquare="true"
            app:inputBoxStyle="singleBox"
            app:spaceSize="10dp"
            />

        <View
            android:id="@+id/wrap1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignLeft="@id/edit1"
            android:layout_alignTop="@id/edit1"
            android:layout_alignRight="@id/edit1"
            android:layout_alignBottom="@id/edit1" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black1"
        android:textSize="14sp"
        android:text="@string/pwd_2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp">

        <com.yunbao.common.custom.SplitEditText
            android:id="@+id/edit2"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:textColor="@color/textColor"
            app:borderColor="#E6E6E6"
            app:contentNumber="4"
            app:contentShowMode="password"
            app:corner_size="5dp"
            app:inputBoxSquare="true"
            app:inputBoxStyle="singleBox"
            app:spaceSize="10dp"
            />

        <View
            android:id="@+id/wrap2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignLeft="@id/edit2"
            android:layout_alignTop="@id/edit2"
            android:layout_alignRight="@id/edit2"
            android:layout_alignBottom="@id/edit2" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black1"
        android:textSize="14sp"
        android:text="@string/pwd_3"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp">

        <com.yunbao.common.custom.SplitEditText
            android:id="@+id/edit3"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:textColor="@color/textColor"
            app:borderColor="#E6E6E6"
            app:contentNumber="4"
            app:contentShowMode="password"
            app:corner_size="5dp"
            app:inputBoxSquare="true"
            app:inputBoxStyle="singleBox"
            app:spaceSize="10dp"
            />

        <View
            android:id="@+id/wrap3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignLeft="@id/edit3"
            android:layout_alignTop="@id/edit3"
            android:layout_alignRight="@id/edit3"
            android:layout_alignBottom="@id/edit3" />

    </RelativeLayout>

    <TextView
        android:id="@+id/change_pwd_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textColor="@color/textColor2"
        android:textSize="15sp"
        android:text="@string/pwd_change_confirm"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/textview_border_circle13"/>

</LinearLayout>