<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:padding="10dp"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:id="@+id/tv_title_sex"
        android:textStyle="bold"
        android:text="@string/sex"
        android:textColor="@color/textColor"
        />

    <com.yunbao.common.custom.FlowRadioDataGroup
        android:id="@+id/fr_sex_level"
        android:layout_width="@dimen/draw_layout_width"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:id="@+id/tv_title_age"
        android:textStyle="bold"
        android:text="@string/age"
        android:textColor="@color/textColor"
        />
    <com.yunbao.common.custom.FlowRadioDataGroup
        android:id="@+id/fr_age_level"
        android:layout_width="@dimen/draw_layout_width"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:id="@+id/tv_title_skill"
        android:textStyle="bold"
        android:text="@string/skill"
        android:textColor="@color/textColor"
        />

    <com.yunbao.common.custom.FlowRadioDataGroup
        android:id="@+id/fr_skill_level"
        android:layout_width="@dimen/draw_layout_width"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:background="@drawable/bg_btn_ghost_1"
            android:gravity="center"
            android:minWidth="60dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:alpha="0.2"
            android:enabled="false"
            android:text="@string/game_reset"
            android:textColor="@color/global"
            android:textSize="11sp"
            />

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_btn_primary_1"
            android:gravity="center"
            android:minWidth="60dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="11sp"
            />
    </LinearLayout>

</LinearLayout>