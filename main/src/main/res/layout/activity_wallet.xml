<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include layout="@layout/view_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_1"
            android:textColor="@color/textColor"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_wallet_1"
            android:paddingLeft="15dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_wallet_coin"
                />
            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="40dp"
                android:text="@string/wallet_3"
                android:textColor="@color/white"
                android:textSize="10sp"
                />

            <TextView
                android:id="@+id/coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/btn_charge"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_wallet_btn"
                android:gravity="center"
                android:minWidth="50dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/charge"
                android:textColor="@color/global"
                android:textSize="12sp"
                />
        </FrameLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/wallet_4"
            android:textColor="@color/textColor"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_wallet_2"
            android:paddingLeft="15dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_wallet_profit"
                />
            <TextView
                android:id="@+id/income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:text="@string/wallet_8"
                android:textColor="@color/white"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="40dp"
                tools:text="@string/wallet_5"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:id="@+id/tv_order_tip"
                />

            <TextView
                android:id="@+id/profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/btn_cash"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_wallet_btn"
                android:gravity="center"
                android:minWidth="50dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/wallet_7"
                android:textColor="#FF5C70"
                android:textSize="12sp"
                />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_wallet_3"
            android:paddingLeft="15dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_wallet_gift"
                />
            <TextView
                android:id="@+id/income_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:text="@string/wallet_9"
                android:textColor="@color/white"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="40dp"
                tools:text="@string/wallet_10"
                android:textColor="@color/white"
                android:id="@+id/tv_gift_tip"
                android:textSize="10sp"
                />

            <TextView
                android:id="@+id/profit_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"

                android:textColor="@color/white"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/btn_cash_gift"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_wallet_btn"
                android:gravity="center"
                android:minWidth="50dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/wallet_7"
                android:textColor="#1ED8CF"
                android:textSize="12sp"
                />
        </FrameLayout>


    </LinearLayout>

</LinearLayout>